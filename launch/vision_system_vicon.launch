<launch>

<rosparam command="load" file="$(find aerowake_flight)/param/camera_setup.yaml"/>

<group ns="camera">

  <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />

  <node name="pointgrey_camera" pkg="pointgrey_camera_driver" type="camera_node"
        args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager">
    <param name="camera_info_url" value="file://$(find aerowake_flight)/param/camera_calib.yaml"/>
    <param name="frame_id" value="camera" />
    <param name="auto_shutter" value="true"/>
    <param name="video_mode" value="format7_mode0" />
    <param name="auto_white_balance" value="true"/>
  </node>

</group>

</launch>
